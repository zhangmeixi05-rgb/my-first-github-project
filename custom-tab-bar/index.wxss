/* custom-tab-bar/index.wxss */
:host{
  /*定义全局css变量*/
  --bg:#D2B487;
}
/*flex样式*/
.flex-row{
  display: flex;
  align-items: center;
  flex-direction: row;
}
.flex-column{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.j_c{
  justify-content: center;
}
/*tabbar样式*/
.tabbar{
position: fixed;
width: 100%;
height: 120rpx;
bottom: 0;
background: #fff;
box-shadow: 0 2px 15px rgba(184,184,210,.5);
/*设置ios底部安全距离*/
padding-bottom: constant(safe-area-inset-bottom);
padding-bottom: env(safe-area-inset-bottom);
}
.tabbar-item{
  width: 20%;
  height: 100%;
  position: relative;
  box-sizing: border-box;
  padding-bottom: 20rpx;
}
.tabbar-item-icon{
  width: 80rpx;
  height: 80rpx;
}
.tabbar-item-text{
  font-size: 22rpx;
  color: var(--bg);
  font-weight: bold;
  position: absolute;
  transform: translateY(80rpx);
  /*默认不显示*/
 /* opacity: 0;*/
}
.tabbar-circle{
  position: absolute;
  width: 128rpx;
  height: 128rpx;
  background: #fff;
  z-index: 1;
  border-radius: 50%;
  font-weight: bold;
  font-size: 45rpx;
  color: #fff;
  text-align: center;
  line-height: 128rpx;
  top: -50rpx;
}
.tabbar-circle::after{
  content:'' ;
  position: absolute;
  width: 104rpx;
  height: 104rpx;
  background: var(--bg);
  z-index: -1;
  border-radius: 50%;
  left: calc(50% - 52rpx);
  top: calc(50% - 52rpx);
}
.tabbar-item.active::after{
  content:'';
  width: 52rpx;
  height: 4rpx;
  background: var(--bg);
  position: absolute;
  left:50%;
  top:0;
  transform: translateX(-50%);
}
.tabbar-item.active .tabbar-item-text{
  opacity: 1;
  transform: translateY(40rpx);
}