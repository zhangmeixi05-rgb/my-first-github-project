<view class="head">
  <view class="title">
    <swiper indicator-dots='true' autoplay='true' interval='4000' duration='1000' circular='true' class="swip">
      <block wx:for="{{Imgs}}" wx:for-index="index">
        <swiper-item>
          <image src='{{Imgs[index].url}}' mode='widthFix'></image>
        </swiper-item>
      </block>
    </swiper>
  </view>
</view>

<view class="zijian">
  <view class="title2">“小情绪事务所”</view>
</view>

<view class="function">
