    <view class="list">
      <view bindtap="diancan">
        <image src="/pages/images/didian.jpg" class="image3" style="width: 150rpx; height: 150rpx; display: inline-block; box-sizing: border-box"></image>
      </view>
      <navigator url="/pages/index/zixun/zixun">
