page {
  padding-bottom: calc(constant(safe-area-inset-bottom) + 170rpx);
  padding-bottom: calc(env(safe-area-inset-bottom) + 170rpx);
  background: #FFFFF0;
}

.container {
  display: flex;
  flex-direction: column;
  padding: 20px;
}

/* 用户信息和定位显示 */
.user-location {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  margin-bottom: 20px;
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  margin-right: 10px;
}

.username {
  font-size: 18px;
  font-weight: bold;
}

.location {
  font-size: 14px;
  color: #888;
}

/* 图片展示 */
.image-swiper {
  width: 100%;
  height: 400px;
  margin-bottom: 20px;
}

.swiper-image {
  height: 100%;
  width: 100%;
}

/* 标题和正文 */
.content {
  width: 100%;
  margin-bottom: 20px;
}

.title {
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 10px;
}

.text {
  font-size: 16px;
}

/* 底部导航栏 */
.tabbar {
  display: flex;
  justify-content: space-around;
  align-items: center;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #FFFAF0;
  padding: 10px;
  border-top: 1px solid #ccc;
}

.tab {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.tab-icon {
  width: 24px;
  height: 24px;
  margin-bottom: 5px;
}

.tab-text {
  font-size: 12px;
  color: #333;
}

.tab-counter {
  font-size: 10px;
  color: #FFFAF0;
}