<view class="container">
  <view class="header">
    <text class="title">{{currentYear}}年{{currentMonth}}月 情绪统计</text>
    <view class="controls">
      <button bindtap="prevMonth">上个月</button>
      <button bindtap="nextMonth">下个月</button>
    </view>
  </view>

  <view class="chart-container">
    <canvas canvas-id="trendCanvas" class="chart-canvas"></canvas>
    <button bindtap="switchChartType" class="switch-btn">
      {{chartType === 'bar' ? '切换为饼状图' : '切换为柱状图'}}
    </button>
  </view>

  <view class="analysis-box">
    <text class="analysis-text">{{analysisText}}</text>
  </view>
</view>
