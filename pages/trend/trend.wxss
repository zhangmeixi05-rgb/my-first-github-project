.container {
  padding: 20rpx;
}

.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.controls {
  display: flex;
  gap: 20rpx;
}

button {
  background-color: #7EC8E3;
  color: white;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
}


.chart-container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.chart-canvas {
  width: 600rpx;
  height: 600rpx;
  margin-top: 20rpx;
}

.switch-btn {
  margin-top: 20rpx;
  background-color: #7EC8E3;
  color: white;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
}


/* 图表类型切换 */
.chart-type-switch {
  display: flex;
  justify-content: center;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.chart-btn {
  background-color: #7EC8E3;
  color: white;
  padding: 15rpx 30rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
}

.chart-btn.active {
  background-color: #5BA3C0;
}

/* 图表画布 */
.chart-canvas {
  width: 350px;
  height: 450px;
  margin: 20rpx auto;
  display: block;
}

/* 情绪分析区域 */

.analysis-box {
  margin-top: 20rpx;
  padding: 20rpx;
  background-color: #f0f8ff;
  border-radius: 16rpx;
}

.analysis-text {
  font-size: 28rpx;
  line-height: 1.6;
  white-space: pre-line;
}
