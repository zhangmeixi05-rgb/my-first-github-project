.calendar-container {
  padding: 20rpx;
}

.calendar-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.calendar-title {
  font-size: 30rpx;
  font-weight: bold;
}

.calendar-switch button {
  margin-left: 10rpx;
  font-size: 24rpx;
  padding: 4rpx 10rpx;
}

.calendar-weekdays {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.weekday {
  width: 13.5%;
  text-align: center;
  font-weight: bold;
  color: #666;
}

.calendar-grid {
  display: flex;
  flex-wrap: wrap;
}

.calendar-day {
  width: 13.5%;
  height: 100rpx;
  text-align: center;
  margin-bottom: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-radius: 12rpx;
  background-color: #f7f7f7;
}

.calendar-day.empty {
  background-color: transparent;
}

.emotion {
  font-size: 24rpx;
  margin-top: 5rpx;
}
